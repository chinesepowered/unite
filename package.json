{
  "name": "fusion-plus-multichain",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm dev:server\" \"pnpm dev:client\"",
    "dev:server": "ts-node-dev src/server/index.ts",
    "dev:client": "next dev --port 3001",
    "build": "pnpm build:server && pnpm build:client",
    "build:server": "tsc",
    "build:client": "next build",
    "start": "node dist/server/index.js",
    "start:client": "next start --port 3001",
    "test": "jest",
    "lint": "eslint src/ app/ --ext .ts,.js,.tsx,.jsx",
    "forge:install": "forge install",
    "forge:build": "forge build",
    "forge:test": "forge test",
    "deploy:contracts": "ts-node scripts/deploy-contracts.ts",
    "build:all": "./scripts/build-and-test.sh"
  },
  "dependencies": {
    "@1inch/cross-chain-sdk": "^0.2.1-rc.60",
    "@1inch/byte-utils": "^2.0.0",
    "ethers": "^6.0.0",
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "cors": "^2.8.5",
    "@stellar/stellar-sdk": "^12.0.0",
    "@mysten/sui.js": "^0.54.1",
    "tronweb": "^6.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "next": "15.3.3",
    "axios": "^1.7.0",
    "lucide-react": "^0.400.0",
    "clsx": "^2.1.0",
    "concurrently": "^8.2.0"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.0",
    "@types/cors": "^2.8.0",
    "@types/jest": "^29.0.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "prool": "^0.0.17",
    "@tailwindcss/postcss": "^4",
    "tailwindcss": "^4"
  }
}